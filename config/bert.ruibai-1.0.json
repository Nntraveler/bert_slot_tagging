{
    "random_seed": 1,
    "numpy_seed": 1,
    "pytorch_seed": 1,
    "train_data_path": "./data/ruibai-1.0/train/",
    "validation_data_path": "./data/ruibai-1.0/valid",
    "test_data_path": "./data/ruibai-1.0/test",
    "dataset_reader": {
        "type": "multi_file",
        "token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "/home1/yym2019/downloads/word-embeddings/bert-base-chinese/",
                "do_lowercase": false
            }
        }
    },
    "model": {
        "type": "bert_st",
        "bert_embedder": {
            "pretrained_model": "/home1/yym2019/downloads/word-embeddings/bert-base-chinese/",
            "requires_grad": false,
            "top_layer_only": false
        },
        "use_crf": true,
        "dropout": 0.5
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 32,
        "sorting_keys": [
            [
                "sentence",
                "num_tokens"
            ]
        ]
    },
    "trainer": {
        "num_epochs": 1000,
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "patience": 10,
        "cuda_device": -1,
        "grad_clipping": 5.0,
        "validation_metric": "+f1"
    }
}